<body>
  <div class="container">
    <div class="header-face">
      <span class="face-emoji">üéâ</span>
      <h1>Femud 4x4 Kazƒ± Kazan</h1>
    </div>

    <div class="badge-row">
      <div class="badge">Tek kutu se√ßme hakkƒ±n var</div>
      <div class="badge secondary">50 / 30 / 20 TL √∂d√ºller</div>
    </div>

    <div class="subtitle">
      4x4 kutudan <strong>1 tanesini</strong> se√ß, ≈üansƒ±nƒ± dene.  
      50 TL ‚Äì 30 TL ‚Äì 20 TL indirim kuponlarƒ±ndan birini yakalayabilirsin.
    </div>

    <input id="nameInput" class="field" type="text" placeholder="Adƒ±nƒ±z (zorunlu)" />
    <input id="igInput" class="field" type="text" placeholder="Instagram adresiniz (@kullanici) (zorunlu)" />

    <div class="note">
      L√ºtfen ger√ßek Instagram adresinizi yazƒ±n. Kazanƒ±rsanƒ±z ekran g√∂r√ºnt√ºs√ºn√º
      <strong>@Femud_tr</strong> hesabƒ±na DM olarak g√∂ndermeniz gerekir.
    </div>

    <div class="grid-wrapper">
      <div class="grid-title">
        16 kutudan sadece <strong>1 tanesini</strong> se√ßebilirsin. üéÅ
      </div>
      <div id="grid" class="grid"></div>
    </div>

    <div id="statusBar" class="status-bar">
      Se√ßim hakkƒ±n: <strong>1</strong>
    </div>

    <div class="btn-row">
      <button id="btnReset" class="btn secondary">Yeniden Oyna</button>
    </div>
  </div>

  <!-- Sonu√ß Modalƒ± -->
  <div id="modalBackdrop" class="modal-backdrop">
    <div class="modal">
      <div id="modalTitle" class="modal-title"></div>
      <div id="modalText" class="modal-text"></div>
      <div id="modalNote" class="modal-note"></div>
      <button id="modalCloseBtn" class="modal-btn">Tamam</button>
    </div>
  </div>

  <script>
    const gridEl      = document.getElementById("grid");
    const statusBar   = document.getElementById("statusBar");
    const nameInput   = document.getElementById("nameInput");
    const igInput     = document.getElementById("igInput");
    const btnReset    = document.getElementById("btnReset");

    const modalBackdrop = document.getElementById("modalBackdrop");
    const modalTitle    = document.getElementById("modalTitle");
    const modalText     = document.getElementById("modalText");
    const modalNote     = document.getElementById("modalNote");
    const modalCloseBtn = document.getElementById("modalCloseBtn");

    let choiceLeft = 1;
    let cardsData = [];
    let gameFinished = false;

    // 16 kutu: 3x50, 3x30, 3x20, 7x bo≈ü
    const BASE_PRIZES = [
      "50 TL ƒ∞ndirim", "50 TL ƒ∞ndirim", "50 TL ƒ∞ndirim",
      "30 TL ƒ∞ndirim", "30 TL ƒ∞ndirim", "30 TL ƒ∞ndirim",
      "20 TL ƒ∞ndirim", "20 TL ƒ∞ndirim", "20 TL ƒ∞ndirim",
      "Bo≈ü", "Bo≈ü", "Bo≈ü", "Bo≈ü", "Bo≈ü", "Bo≈ü", "Bo≈ü"
    ];

    function shuffle(array) {
      const arr = array.slice();
      for (let i = arr.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
      }
      return arr;
    }

    function initGame() {
      gridEl.innerHTML = "";
      choiceLeft = 1;
      gameFinished = false;
      cardsData = shuffle(BASE_PRIZES);
      updateStatus();

      for (let i = 0; i < 16; i++) {
        const card = document.createElement("div");
        const styleIndex = (i % 4) + 1;
        card.className = "card card-style-" + styleIndex;
        card.dataset.index = i.toString();

        const inner = document.createElement("div");
        inner.className = "card-inner";
        inner.textContent = cardsData[i] === "Bo≈ü" ? "≈ûansƒ±nƒ± tekrar dene" : cardsData[i];

        const mask = document.createElement("div");
        mask.className = "card-mask";

        const logo = document.createElement("div");
        logo.className = "logo-circle";
        logo.textContent = "Femud";

        mask.appendChild(logo);
        card.appendChild(inner);
        card.appendChild(mask);

        card.addEventListener("click", onCardClick);
        gridEl.appendChild(card);
      }
    }

    function updateStatus() {
      statusBar.innerHTML = `Se√ßim hakkƒ±n: <strong>${choiceLeft}</strong>`;
    }

    function onCardClick(e) {
      if (gameFinished || choiceLeft <= 0) return;

      const card = e.currentTarget;
      if (card.classList.contains("revealed") || card.classList.contains("disabled")) {
        return;
      }

      const name = nameInput.value.trim();
      let ig = igInput.value.trim();
      if (!name || !ig) {
        alert("L√ºtfen √∂nce adƒ±nƒ±zƒ± ve Instagram adresinizi girin.");
        return;
      }
      if (!ig.startsWith("@")) {
        ig = "@" + ig;
        igInput.value = ig;
      }

      const index = Number(card.dataset.index || "0");
      const prize = cardsData[index];

      card.classList.add("revealed");
      choiceLeft = 0;
      updateStatus();
      gameFinished = true;

      // T√ºm kutularƒ± kilitle
      const allCards = gridEl.querySelectorAll(".card");
      allCards.forEach(c => c.classList.add("disabled"));

      if (prize === "Bo≈ü") {
        showLoseModal(ig);
      } else {
        launchConfetti();
        showWinModal(ig, prize);
      }
    }

    function launchConfetti() {
      const colors = ["#ff5252", "#ffeb3b", "#69f0ae", "#40c4ff", "#ff80ab", "#b39ddb"];
      for (let i = 0; i < 80; i++) {
        const conf = document.createElement("div");
        conf.className = "confetti";
        const color = colors[Math.floor(Math.random() * colors.length)];
        conf.style.backgroundColor = color;

        const left = Math.random() * 100;
        const dx   = (Math.random() - 0.5) * 200 + "px";
        const delay = Math.random() * 0.3;

        conf.style.left = left + "vw";
        conf.style.setProperty("--dx", dx);
        conf.style.animationDelay = delay + "s";

        document.body.appendChild(conf);
        setTimeout(() => conf.remove(), 3500);
      }
    }

    function showWinModal(ig, prize) {
      modalTitle.textContent = `Tebrikler! ${prize} kazandƒ±nƒ±z üéâ`;
      modalText.innerHTML = `
        Kazandƒ±ƒüƒ±nƒ±z indirim kuponu: <span class="modal-highlight">${prize}</span><br>
        Bu kuponu Femud alƒ±≈üveri≈ülerinizde kullanabilirsiniz.
      `;
      modalNote.innerHTML = `
        L√ºtfen bu ekranƒ±n <strong>ekran g√∂r√ºnt√ºs√ºn√º</strong> alƒ±p
        <strong>@Femud_tr</strong> Instagram hesabƒ±na DM (mesaj) olarak g√∂nderin.<br>
        (Instagram hesabƒ±nƒ±z: <strong>${ig}</strong>)
      `;
      modalBackdrop.style.display = "flex";
    }

    function showLoseModal(ig) {
      modalTitle.textContent = "Bu kutu bo≈ü √ßƒ±ktƒ± üòá";
      modalText.innerHTML = `
        Se√ßtiƒüiniz kutudan indirim kuponu √ßƒ±kmadƒ±.<br>
        Dilerseniz oyunu tekrar deneyebilirsiniz.
      `;
      modalNote.innerHTML = `
        Kazandƒ±ƒüƒ±nƒ±z bir kupon olursa bu ekranƒ±n ekran g√∂r√ºnt√ºs√ºn√º alƒ±p
        <strong>@Femud_tr</strong> hesabƒ±na DM olarak g√∂ndermeniz gerekir.
      `;
      modalBackdrop.style.display = "flex";
    }

    modalCloseBtn.addEventListener("click", () => {
      modalBackdrop.style.display = "none";
    });

    modalBackdrop.addEventListener("click", (e) => {
      if (e.target === modalBackdrop) {
        modalBackdrop.style.display = "none";
      }
    });

    btnReset.addEventListener("click", () => {
      modalBackdrop.style.display = "none";
      initGame();
    });

    initGame();
  </script>
</body>
</html>